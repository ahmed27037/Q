flowchart TD
    Start([QEC Cycle Start]) --> Errors[Introduce Errors]
    Errors --> XErrors[X Errors]
    Errors --> ZErrors[Z Errors]
    
    XErrors --> Measure[Measure Syndrome]
    ZErrors --> Measure
    
    Measure --> XSyndrome[X Stabilizers]
    Measure --> ZSyndrome[Z Stabilizers]
    
    XSyndrome --> Decoder[QEC Decoder]
    ZSyndrome --> Decoder
    
    Decoder --> Lookup{Lookup Table<br/>Steane Code}
    Decoder --> Matching{Matching<br/>Surface Code}
    Decoder --> UnionFind{Union-Find<br/>Multiple Errors}
    
    Lookup --> Correction[Determine Correction]
    Matching --> Correction
    UnionFind --> Correction
    
    Correction --> Apply[Apply Correction]
    Apply --> Verify{Errors<br/>Corrected?}
    
    Verify -->|Yes| Success[Success]
    Verify -->|No| Failure[Failure]
    
    Success --> Latency[Record Latency]
    Failure --> Latency
    
    Latency --> Stats[Update Metrics]
    Stats --> End([Cycle Complete])
    
    Stats --> NextCycle{More Cycles?}
    NextCycle -->|Yes| Start
    NextCycle -->|No| Results[Return Statistics]
    
    classDef neonCyan fill:#00FFFF,stroke:#00CCCC,stroke-width:4px,color:#000000,font-size:18px,font-weight:bold
    classDef neonPink fill:#FF00FF,stroke:#CC00CC,stroke-width:4px,color:#000000,font-size:18px,font-weight:bold
    classDef neonGreen fill:#39FF14,stroke:#2ECC00,stroke-width:4px,color:#000000,font-size:18px,font-weight:bold
    classDef neonYellow fill:#FFD700,stroke:#CCAA00,stroke-width:4px,color:#000000,font-size:18px,font-weight:bold
    classDef neonPurple fill:#BF00FF,stroke:#9900CC,stroke-width:4px,color:#FFFFFF,font-size:18px,font-weight:bold
    classDef neonBlue fill:#00BFFF,stroke:#0080CC,stroke-width:4px,color:#000000,font-size:18px,font-weight:bold
    classDef default fill:#F5F5F5,stroke:#888888,stroke-width:3px,color:#000000,font-size:16px,font-weight:normal
    
    class Decoder neonPink
    class Correction neonGreen
    class Latency neonYellow
    class Stats neonCyan
    class Start,End neonPurple
    class Results neonBlue
